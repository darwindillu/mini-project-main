<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ShoppeE</title>
  <link rel="shortcut icon" href="/img/favicon.ico">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css">

</head>

<body>
  <form class="px-md-2" id="productform" method="post" action="/admin/updateproduct" enctype="multipart/form-data">
    <section class="vh-100 h-custom" style="background-color: #8fc4b7;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-8 col-xl-6">
            <div class="card rounded-3">
              <div class="card-body p-4 p-md-5">
                <a href="/admin/product"
                  style="color: black; font-weight: 30px; text-decoration: none; border-style:solid; padding-left: 2px; padding-right: 2px;">X</a>

                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2" style="text-align: center;">Update Product</h3>





                <div class="form-outline mb-4">
                  <label for="" class="form-label">Product Name</label>
                  <input type="text" id="productname" class="form-control" value="<%= product.productname %>"
                    name="productname" maxlength="80" />
                  <div class="error" style="color:red;"></div>

                </div>

                <div class="form-outline mb-4">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-outline">
                        <label for="" class="form-label">Stock</label>
                        <input type="number" id="stockid" class="form-control" value="<%= product.stock %>" name="stock"
                           />
                        <div class="error" style="color:red;"></div>

                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-outline">
                        <label for="" class="form-label">Price</label>
                        <input type="number" id="price" class="form-control" value="<%= product.price %>" name="price"
                           />
                        <div class="error" style="color:red;"></div>

                      </div>
                    </div>

                  </div>
                </div>

                
                <div class="form-outline mb-4">
                  <label for="" class="form-label">Discount</label>
                  <input type="number" id="discount" class="form-control" value="<%= product.discount %>"
                    name="discount" />
                  <div class="error" style="color:red;"></div>

                </div>

                <div class="form-outline mb-4">
                  <label for="" class="form-label">Description</label>
                  <input type="text" id="description" class="form-control" value="<%= product.description %>"
                    name="description" />
                  <div class="error" style="color:red;"></div>

                </div>

                <div class="form-outline mb-4">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-outline">
                        <form action="/upload" method="POST" enctype="multipart/form-data">
                          <label for="" class="form-label">Image</label>
                          <input type="file" id="images" multiple class="form-control" placeholder="images" name="image"
                           />
                          <div class="error" style="color:red;"></div>

                        </form>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-outline" style="margin-top: 30px;">
                        <select id="category" class="form-select" name="category">
                          <option value="<%= product.category %>" selected disabled>
                            <%= product.category %>
                          </option>
                          <option value="Laptops">Laptops</option>
                          <option value="Smartphones">Smartphones</option>
                          <option value="Tablets">Tablets</option>
                          <option value="Watches">Watches</option>
                          <option value="Cameras">Cameras</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <% product1.forEach((collections)=> { %>
                  <div class="d-flex justify-content-center mb-3 zoom-container">
                    <% collections.images.forEach((image, i)=> { %>
                      <div class="image-container">
                        <form method="POST" action="/admin/deleteimage/<%= collections._id %>/<%= i %>">
                          <button type="submit" class="btn btn-danger btn-sm delete-button">
                            <i class="fas fa-trash"></i>
                          </button>
                          <input type="hidden" name="productId" value="<%= collections._id %>" />
                          <input type="hidden" name="imageIndex" value="<%= i %>" />

                        </form>
                        <img width="60" height="60" class="rounded-2 zoom-image" src="/img/<%= image %>" />

                      </div>
                      <% }) %>
                  </div>
                  <% }) %>




                    <div style="text-align: center;">
                      <button type="submit" class="btn btn-success btn-lg mb-1 ">Update Product</button>
                    </div>
              </div>

            </div>
          </div>
    </section>
  </form>
  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="/js/admin/productvalidation.js"></script>
</body>

</html>