<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ShoppeE</title>
  <link rel="shortcut icon" href="/img/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>
  <section class="vh-100 h-custom" style="background-color: #8fc4b7;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
          <div class="card rounded-3">
            <div class="card-body p-4 p-md-5">
              <a href="/"
                style="color: black; font-weight: 30px; text-decoration: none; border-style:solid; padding-left: 2px; padding-right: 2px;">X</a>




              <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2" style="text-align: center;">LOGIN </h3>


              <form id="loginform" method="post" action="/user/userhome">
                <% if (successMessage) { %>
                  <div class="alert alert-success">
                    <%= successMessage %>
                  </div>
                  <script>
                    setTimeout(function () {
                      var successMessageDiv = document.querySelector('.alert-success');
                      if (successMessageDiv) {
                        successMessageDiv.style.display = 'none';
                      }
                    }, 3000); 
                  </script>
                  <% } %>

                    <% if (errorMessage) { %>
                      <div class="alert alert-danger">
                        <%= errorMessage %>
                      </div>
                      <script>
                        setTimeout(function () {
                          var errorMessageDiv = document.querySelector('.alert-danger');
                          if (errorMessageDiv) {
                            errorMessageDiv.style.display = 'none';
                          }
                        }, 3000); 
                      </script>
                      <% } %>







                        <div class="form-outline mb-4">
                          <input type="text" id="email" class="form-control" placeholder="Email" name="email" />
                          <div class="error" style="color:red;"></div>

                        </div>

                        <div class="form-outline mb-4">
                          <input type="password" id="password" class="form-control" placeholder="Password"
                            name="password" />
                          <div class="error" style="color:red;"></div>

                        </div>


                        <div class="mb-4">



                          <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                            <div class="col-md-6">

                              <div class="form-outline">
                                <a href="/user/reset" style="text-align: center;">Forget Password</a>
                              </div>

                            </div>
                          </div>

                          <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

                          <div class="form-outline" style="margin-top: 20px;">
                            <p>You Don't Have Account? <a href="/user/register" style="text-align: center; ">SignUp</a>
                            </p>

                          </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="/js/user/loginvalidation.js"></script>
</body>

</html>