<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShoppeE</title>
    <link rel="stylesheet" href="/css/otp.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>

<body>
    <form action="/user/passotp" method="post">
        <div class="container height-100 d-flex justify-content-center align-items-center">

            <div class="position-relative">
                <div class="card p-2 text-center">
                    <h6>Please enter the one time password <br> to verify your account</h6>


                    <% if (errorMessage) { %>
                        <div class="alert alert-danger" id="errorMessage">
                            <%= errorMessage %>
                        </div>

                        <script>
                            setTimeout(function () {
                                var errorMessageDiv = document.getElementById('errorMessage');
                                if (errorMessageDiv) {
                                    errorMessageDiv.style.display = 'none';
                                }
                            }, 3000); 
                        </script>
                        <% } %>
                            <div> <span>A code has been sent to</span> <small></small> </div>
                            <input type="text" id="otp" name="otp">
                            <div class="mt-4"> <button class="btn btn-danger px-4 validate"
                                    type="submit">Submit</button> </div>
                            <div id="countdown">00:60</div>
                            <div id="hiddenButton" style="display: none;"> 
                                <a id="showButton" href="/user/otp">Resend OTP</a>
                            </div>
                </div>

            </div>
        </div>
    </form>


    <script>
        let seconds = 60;

        function countdown() {
            const countdownDisplay = document.getElementById('countdown');
            const interval = setInterval(function () {
                countdownDisplay.textContent = seconds;

                if (seconds === 0) {
                    clearInterval(interval);
                } else {
                    seconds--;
                }
            }, 1000);
        }

        countdown(); 
    </script>

    <script>
        function showButtonAfterOneMinute() {
            const hiddenButton = document.getElementById('hiddenButton');
            hiddenButton.style.display = 'block'; 
        }

        setTimeout(showButtonAfterOneMinute, 60000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>