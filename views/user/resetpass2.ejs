<!DOCTYPE html>
<html lang="en">

<head>
	<title>ShoppeE</title>
	<link rel="shortcut icon" href="/img/favicon.ico">

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta http-equiv="x-ua-compatible" content="ie=edge">

	<link rel="shortcut icon" href="public/img/favicon.ico">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
	<link rel="stylesheet" href="public/graindashboard/css/graindashboard.css">
	<link rel="shortcut icon" href="public/img/favicon.ico">
	<link rel="stylesheet" href="public/graindashboard/css/graindashboard.css">
</head>

<body class="">
	<main class="main">
		<div class="content">
			<div class="container-fluid pb-5">
				<div class="row justify-content-md-center">
					<div class="card-wrapper col-12 col-md-4 mt-5">
						<div class="brand text-center mb-3">
						</div>
						<div class="card">
							<div class="card-body">
								<% if (errorMessage) { %>
									<div class="alert alert-danger" id="errorMessage">
										<%= errorMessage %>
									</div>

									<script>
										setTimeout(function () {
											var errorMessageDiv = document.getElementById('errorMessage');
											if (errorMessageDiv) {
												errorMessageDiv.style.display = 'none';
											}
										}, 3000); 
									</script>
									<% } %>
										<h4 class="card-title"
											style="text-align: center; font-size:xx-large; color: blue;">Reset Password
										</h4>


										<form action="/user/reset2" method="post" id="form">


											<div class="form-group" style="margin-top: 10px;">

												<input id="password" type="password" class="form-control"
													name="password" placeholder="Password">
												<div class="error" style="color:red;"></div>

											</div>

											<div class="form-group" style="margin-top: 10px;">

												<input id="passwordconfirm" type="password" class="form-control"
													name="passwordconfirm" placeholder="Confirm Password">
												<div class="error" style="color:red;"></div>

											</div>

											<div class="form-group no-margin"
												style="margin-top: 20px; text-align: center;">
												<button type="submit" class="btn btn-success btn-lg mb-1 ">Reset
													Password</button>

											</div>
										</form>
							</div>
						</div>

					</div>
				</div>



			</div>

		</div>
	</main>

	<script src="/js/user/resetpass.js"></script>

</body>

</html>