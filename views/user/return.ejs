<body>
    <form action="/user/postReturn/<%= orderId %>/<%= proId %>" method="post" id="form">
        <div class="card" style="align-items: center; margin-top: 180px;">
            <a  style="font-weight: bolder; text-decoration: none; margin-right: 220px;" href="/user/orders">
                Back
            </a>
            <div class="card-body" style="height: 300px;">
                <h5 class="card-title">Enter Your Reason</h5>

                <textarea class="form-control" name="return" rows="5" style=" width: 250px;"></textarea>
                <div id="error-return" style="color: red;"></div>

                <button type="submit" class="btn btn-primary mt-2">Return</button>

            </div>
        </div>
    </form>
    <script src="/js/user/return.js"></script>
