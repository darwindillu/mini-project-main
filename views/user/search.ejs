<%- include('../include/header') -%>
 
<style>
    .card-container {
      position: relative;
      padding-top: 20px;
      overflow: hidden;
    }

    .card-title {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: horizontal;
    }

    .circle-container {
      position: relative;
      padding-top: 100%;
      overflow: hidden;
    }

    .circle-container {
      position: relative;
      padding-top: 25%;
      overflow: hidden;
    }
  </style>



  <section style="display: flex;">
    <div class="container my-5">
      <div class="card-container">
        <div class="row">
          <% productdata.forEach((collections, index)=> { %>
            <% if(collections.availability==='true' ) { %>
              <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                <div class="card-container">
                  <div class="card w-100 my-2 shadow-2-strong" style="height: 430px;">
                    <a href="/user/productdetail/<%= collections._id %>">
                      <img style="height: 230px;" src="/img/<%= collections.images[0] %>" class="card-img-top"
                        alt="<%= collections.productname %>" />
                    </a>
                    <div class="card-body d-flex flex-column">
                      <h5 class="card-title">
                        <%= collections.productname %>
                      </h5>
                      <p class="card-text"><span style="font-weight: bolder; font-size: 20px;">&#8377; <%=
                            collections.price %></span></p>
                      <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                        <a href="#!" class="btn btn-primary shadow-0 me-1">Add to cart</a>
                        <a href="#!" class="btn btn-light border px-2 pt-2 icon-hover"><i
                            class="fas fa-heart fa-lg text-secondary px-1"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
                <% }); %>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-5" style="background-color: #f5f5f5;">
    <div class="container text-dark pt-3">
